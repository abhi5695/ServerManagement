@page "/servers"

@inject NavigationManager navigationManager
@rendermode InteractiveServer


<h3>Servers</h3>
<br />
<br />
<div class="container-fluid text-center">
    <div class="row w-100">
        <div class="col">
            <div class="card @(this.selectedCity.Equals(String.Empty,StringComparison.OrdinalIgnoreCase)?"border-dark border-5":"")" @onclick="@(() => { SelectCity(String.Empty); })">
                <img src="@($"/images/City.png")" class="card-img-top img-thumbnail">
                <div class="card-body">
                    All Cities
                </div>
            </div>
        </div>
        @foreach (var city in cities)
        {
            <div class="col">
                <div class="card @(this.selectedCity.Equals(city, StringComparison.OrdinalIgnoreCase) ? "border-dark border-5" : "")" @onclick="@(() => { SelectCity(city); })">
                    <img src="@($"/images/{city}.png")" class="card-img-top img-thumbnail">
                    <div class="card-body">
                        @city
                    </div>
                </div>
            </div>
        }
    </div>    
</div>
<br />
<a href="/servers/add" class="btn btn-success mb-3">Add New Server</a>
<ServerComponent @rendermode="InteractiveServer"></ServerComponent>
<br />
<div class="row">
    <div class="col-6 ms-auto">
        <div class="input-group mb-1">
            <input type="text" class="form-control" placeholder="Search Servers" @bind-value="serverFilter" />
            <button class="btn btn-secondary" type="button" id="button-search" @onclick="HandleSearchClick">Search</button>
        </div>
    </div>
</div>
@if (servers != null)
{
    <div class="row w-100">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Server Name</th>
                    <th>City</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <Virtualize Items="this.servers" Context="server">
                    <tr @key="server.ServerId">
                        <td>@server.Name</td>
                        <td>@server.City</td>
                        <td><span style="color:@((server.IsOnline ? "green" : "red"))">@(server.IsOnline ? "Online" : "Offline")</span></td>
                        <td>
                            <a href="/servers/@(server.ServerId)" class="btn btn-link">Edit</a>
                            <EditForm Model="server"
                                      FormName="@($"form-server-{server.ServerId}")"
                                      OnValidSubmit="@(() => {DeleteServer(server.ServerId);})">
                                <button type="submit" class="btn btn-link">Delete</button>
                            </EditForm>
                        </td>
                    </tr>
                </Virtualize>
            </tbody>
        </table>
    </div>
}
else
{
    <p><em>Loading...</em></p>
}

@code {
    private List<Server> servers = ServerReepository.GetServers();
    private List<string> cities = CitiesRepository.GetCities();
    private string selectedCity = String.Empty;

    private string _serverFilter = String.Empty;
    private string serverFilter { get => _serverFilter;
        set
        {
            _serverFilter = value;
        }
    }

    private void SelectCity(string city)
    {
        selectedCity = city;
        if (!String.IsNullOrEmpty(selectedCity))
        {
            if (selectedCity == "Bangalore")
            {
                for (int i = 16; i <= 2000; i++)
                {
                    ServerReepository.AddServer(new Server { Name = $"Server{i}", City = "Bangalore", IsOnline = true });
                }
            }
            servers = ServerReepository.GetServersByCity(selectedCity);
        }
        else
        {
            servers = ServerReepository.GetServers();
        }
    }
    public async Task DeleteServer(int serverId)
    {
        if(serverId != 0)
        {
            ServerReepository.DeleteServer(serverId);
            navigationManager.Refresh();
        }
    }
    private void HandleSearchClick()
    {
        servers = ServerReepository.SearchServers(serverFilter);
        selectedCity = String.Empty;
    }
}
