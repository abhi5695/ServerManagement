@page "/servers"

<h3>Servers</h3>
<br />
<br />
<div class="container-fluid text-center">
    <div class="row w-100">
        @foreach (var city in cities)
        {
            <div class="col">
                <div class="card">
                    <img src="@($"/images/{city}.png")" class="card-img-top img-thumbnail">
                    <div class="card-body">
                        <button type="button" class="btn btn-primary">@city</button>
                    </div>
                </div>
            </div>
        }
    </div>    
</div>
<br />
<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Server Name</th>
                <th>City</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Server server in servers)
            {
                <tr>
                    <td>@server.Name</td>
                    <td>@server.City</td>
                    <td><span style="color:@((server.IsOnline ? "green" : "red"))">@(server.IsOnline ? "Online" : "Offline")</span></td>
                    <td><a href="/servers/@(server.ServerId)" class="btn-link">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>


@code {
    private List<Server> servers = ServerReepository.GetServers();
    private List<string> cities = CitiesRepository.GetCities();
}
